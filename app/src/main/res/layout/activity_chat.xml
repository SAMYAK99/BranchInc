<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ChatActivity">


    <EditText
        android:id="@+id/et_message"
        android:layout_width="387dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/edittext_shape"
        android:gravity="start"
        android:hint="Enter any message"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvChats" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="254dp"
        android:layout_height="47dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/signin_shape"
        android:text="Send Message"
        app:layout_constraintEnd_toEndOf="@+id/et_message"
        app:layout_constraintStart_toStartOf="@+id/et_message"
        app:layout_constraintTop_toBottomOf="@+id/et_message" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rvChats"
        android:layout_width="410dp"
        android:layout_height="450dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>